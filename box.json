{
    "main": "bin/main.php",
    "output": "dist/shed",
    "directories": [
        "src",
        "vendor"
    ],
    "exclude-composer-files": false,
    "files": [
        "composer.json"
    ],
    "finder": [
        {
            "notName": "/LICENSE|.*\\.md|.*\\.dist|Makefile|composer\\.json|composer\\.lock/",
            "exclude": [
                "bamarni",
                "doc",
                "test",
                "test_old",
                "tests",
                "Test",
                "Tests"
            ],
            "in": "vendor"
        }
    ]
}
